    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Nodeunit Debug",
            "program": "${workspaceRoot}/node_modules/nodeunit/bin/nodeunit",
            "cwd": "${workspaceRoot}",
            "outFiles": [],
            "sourceMaps": true,
            "args": [
                "test/optionsResolverTests.js",
                "-t",
                "include will bring in files when specified"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858,
            "outFiles": [],
            "sourceMaps": true
        }
    ]
}